<h1>Все ключи в порядке убывания числа считываний</h1>

<% if @keys.empty? %>
  <b>No keys in storage</b>
<% else %>
<table border="2">
  <tr>
    <th>id</th>
    <th>Key</th>
    <th>Rating</th>
    <th></th>
  </tr>

  <% @keys.each do |i| %>

    <tr>
      <td><%= i.id %></td>
      <td><%= link_to i.key, controller: "kvstorages", action: "get", id: i %></td>
      <td><%= i.rating %></td>
      <td><%= link_to "Удалить", controller: "kvstorages", action: "destroy", id: i.id , method: :delete, data: { confirm: "Точно удалить?" } %></td>
    </tr>

  <% end %>

</table>

<% end %>
